    {{ parent() }}
    {% set config = {'config':{
        'element' : 'rf-richtext'
    }} %}
    {% include 'admin/components/tinymce.html.twig'  with config %}
    <script>
        $(document).ready(function () {


        });
    </script>

{% endblock %}
