{% extends 'page/components/structure.html.twig' %}

{% block title %}Edit Properties{% endblock %}

{% block sidenav %}
    {% set config = {'config':{
        'active' : 'page'
    }} %}
    {% include 'admin/sidenav.html.twig'  with config %}
{% endblock %}

{% block nav %}
    {% set config = {'config':{
        'main': {'path' : path('rf_page_view',{'id':page.id,'tab':'contents'}), 'title':"< Back To "~page.name}
    }} %}
    {% include 'admin/nav.html.twig' with config %}
{% endblock %}

{% block header %}
    {% include 'page/components/header.html.twig' %}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12 mb-5 mb-xl-0">
            <div class="nav-wrapper">
                <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link mb-sm-3 mb-md-0 active" id="general-tab" data-toggle="tab" href="#general"
                           role="tab" aria-controls="general" aria-selected="true"><i class="ni ni-bulb-61 mr-2"></i>General</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-sm-3 mb-md-0" id="roles-tab" data-toggle="tab" href="#roles" role="tab"
                           aria-controls="roles" aria-selected="false"><i class="ni ni-badge mr-2"></i>Roles</a>
                    </li>
                </ul>
            </div>
            <div class="card shadow">
                <div class="card-body align-content-center">
                    {{ form_start(form) }}
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade" id="roles" role="tabpanel" aria-labelledby="roles-tab">


                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            {{ form_row(form.roles) }}
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="tab-pane fade show active" id="general" role="tabpanel"
                             aria-labelledby="general-tab">
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-12 " style="text-align:center;">
                                        {{ form_rest(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <button type="submit" id="edit-block-properties"
                                            class="btn btn-icon btn-3 btn-danger">
                                        <span class="btn-inner--icon"><i class="fa fa-save"></i> </span>
                                        <span class="btn-inner--text">Done</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/admin/js/plugins/tinymce/tinymce.min.js') }}"></script>
    {% set config = {'config':{
        'element' : 'rf-richtext'
    }} %}
    {% include 'admin/components/tinymce.html.twig'  with config %}
    <script>
        $(document).ready(function () {

        });
    </script>

{% endblock %}
