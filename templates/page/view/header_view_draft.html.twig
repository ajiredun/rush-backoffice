{%  set randImageValue = random(4) %}
<div class="header pb-8 pt-5 pt-md-8 d-flex align-items-center" style="background-image: url('{{ asset('assets/login/login'~randImageValue~'.jpg') }}'); background-size: cover; background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-dark opacity-8"></span>
    <div class="container-fluid">
        <div class="header-body">
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-md-6">
                    <div class="card bg-transparent border-light card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <h5 class="card-title text-gray text-uppercase text-muted mb-0">Page Name</h5>
                            <h2 class="text-white">{{ page.name }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body page_published">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Status</h5>
                                        <span class="h3 text-blue font-weight-bold mb-0">DRAFT</span>
                                </div>
                                <div class="col-auto">
                                        <div class="icon icon-shape bg-gradient-blue text-white rounded-circle shadow">
                                            <i class="fas fa-pencil-ruler"></i>
                                        </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body page_published">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Draft</h5>
                                    {% if getDraftPageOfPublishedPage(page) %}
                                        <span class="h3 text-black-50 font-weight-bold mb-0"><a href="{{ path('rf_page_view',{'id': getDraftPageOfPublishedPage(page).id}) }}">View Draft</a> </span>
                                    {% else %}
                                        <span class="h3 text-black-50 font-weight-bold mb-0"><a href="{{ path('rf_page_add') }}">Create Draft</a> </span>
                                    {% endif %}
                                </div>
                                <div class="col-auto">
                                    {% if getDraftPageOfPublishedPage(page) %}
                                        <div class="icon icon-shape bg-gradient-gray-dark text-white rounded-circle shadow">
                                            <i class="fas fa-pencil-ruler"></i>
                                        </div>
                                    {% else %}
                                        <div class="icon icon-shape bg-gradient-gray-dark text-white rounded-circle shadow">
                                            <i class="fas fa-plus"></i>
                                        </div>
                                    {% endif %}

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


