{% extends 'page/view/view_base.html.twig' %}

{% block js %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('.rf-help').click(function () {
                $.confirm({
                    theme: 'supervan',
                    title: 'Help Section - Page',
                    content: 'HELP',
                    buttons: {
                        confirm: function () {
                            $.alert('Confirmed!');
                        },
                        cancel: function () {
                            $.alert('Canceled!');
                        },
                        somethingElse: {
                            text: 'Something else',
                            btnClass: 'btn-blue',
                            keys: ['enter', 'shift'],
                            action: function(){
                                $.alert('Something else?');
                            }
                        }
                    }
                });
            });

        });
    </script>

{% endblock %}
