<div class="d-flex flex-wrap ct-view-list grabbable content-list-item align-items-center  justify-content-center h-100 mx-auto"
     rf-content-code="{% if block is defined and block %}{{ block.id }}{% else %}{{ ct.code }}{% endif %}">
    <div class="mr-auto"><img class="img-ct-list" src="{{ asset(ct.viewListImage) }}" alt="{{ ct.label }}"></div>
    <div class="p-1 mb-2" style="max-width:250px;">
        {% block body %}
            <span style="font-size:10px;color:grey;">{% if block is defined and block %}id: {{ block.id }}{% else %}{{ ct.code }}{% endif %}</span>
            <h4 class="card-title">{{ ct.label }}</h4>
            <p class="card-text">{% block p %}{% endblock %}</p>
        {% endblock %}
    </div>
    <div class="p-1 ct-view-list-actions mt--6 ml-auto" style="display:{% if allow_buttons is defined and allow_buttons %}block{% else %}none{% endif %};">
        {% block buttons %}
            <button class="btn ct-block-remove btn-sm btn-warning text-white"><i class="fas fa-times-circle"></i> </button>
        {% endblock %}
    </div>
</div>