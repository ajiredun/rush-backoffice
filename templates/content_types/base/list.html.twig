<div class="card ct-view-list grabbable content-list-item align-items-center" rf-content-code="{% if block is defined and block %}{{ block.id }}{% else %}{{ ct.code }}{% endif %}">
    <img class="card-img-top img-ct-list-top" src="{{ asset(ct.viewListImage) }}" alt="Card image cap">
    <div class="card-header bg-default border-0" style="width:100%;">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0 text-white"> {{ ct.label }} <span style="font-size:10px; color:grey;" title="({{ ct.code }})"> (id: {% if block is defined and block %}{{ block.id }}{% else %}{{ ct.code }}{% endif %})</span></h3>

            </div>
            <div class="col-4 ct-view-list-actions" style="display:{% if allow_buttons is defined and allow_buttons %}block{% else %}none{% endif %};">
                <h3 class="mb-0">
                    <button class="btn ct-block-remove btn-sm btn-secondary" title="Remove this block"><i class="fas fa-times-circle"></i> </button>
                </h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        {% block body %}
            <img class="img-ct-list" src="{{ asset(ct.viewListImage) }}" alt="{{ ct.label }}">
            {% block p %}{% endblock %}
        {% endblock %}
    </div>
</div>

